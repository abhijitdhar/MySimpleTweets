<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivCProfileImage1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCName1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivCProfileImage1"
        android:layout_toEndOf="@+id/ivCProfileImage1"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTagLine"
        android:layout_below="@+id/tvCName1"
        android:layout_toRightOf="@+id/ivCProfileImage1"
        android:layout_toEndOf="@+id/ivCProfileImage1"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers Count"
        android:id="@+id/tvFollowers"
        android:layout_below="@+id/ivCProfileImage1"
        android:textSize="10sp"
        android:layout_marginRight="5sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends Count"
        android:id="@+id/tvFriends"
        android:layout_toRightOf="@+id/tvFollowers"
        android:layout_alignBottom="@id/tvFollowers"
        android:textSize="10sp"
        />


</RelativeLayout>
